rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow users to read their own user document
    match /users/{userId} {
      // Allow users to read their own document (for Firebase Auth users)
      allow read, write: if request.auth != null && request.auth.uid == userId;
      
      // Allow unauthenticated read access for login purposes (username lookup)
      allow read: if true;
      
      // Allow unauthenticated list access for login purposes (needed for regular/senior pharmacist login)
      allow list: if true;
      
      // Allow lead users to read all user documents they own
      allow read: if request.auth != null && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'lead' &&
        resource.data.ownerId == request.auth.uid;
      
      // Allow lead users to create/update users they own
      allow create, update: if request.auth != null && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'lead' &&
        request.resource.data.ownerId == request.auth.uid;
      
      // Allow lead users to delete users they own (for delete operations, check resource.data.ownerId)
      allow delete: if request.auth != null && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'lead' &&
        resource.data.ownerId == request.auth.uid;
    }
    
    // Allow authenticated users to read pharmacies they own OR are assigned to
    // Also allow unauthenticated access for regular/senior pharmacists (they'll be filtered by client)
    match /pharmacies/{pharmacyId} {
      allow read: if request.auth != null && (
        resource.data.ownerId == request.auth.uid ||
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.assignedPharmacy == pharmacyId
      ) || true; // Allow unauthenticated read for regular/senior pharmacists
      
      // Allow lead users to create/update pharmacies they own
      allow create, update: if request.auth != null && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'lead' &&
        request.resource.data.ownerId == request.auth.uid;
      
      // Allow lead users to delete pharmacies they own (for delete operations, check resource.data.ownerId)
      allow delete: if request.auth != null && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'lead' &&
        resource.data.ownerId == request.auth.uid;
      
      // Allow users to read/write their assigned pharmacy's data
      // Also allow unauthenticated access for regular/senior pharmacists
      match /monthlyStock/{document=**} {
        allow read, write: if request.auth != null && (
          get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'lead' ||
          get(/databases/$(database)/documents/users/$(request.auth.uid)).data.assignedPharmacy == pharmacyId
        ) || true; // Allow unauthenticated access for regular/senior pharmacists
      }
      
      match /attendance/{document=**} {
        allow read, write: if request.auth != null && (
          get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'lead' ||
          get(/databases/$(database)/documents/users/$(request.auth.uid)).data.assignedPharmacy == pharmacyId
        ) || true; // Allow unauthenticated access for regular/senior pharmacists
      }
      
      match /shortages/{document=**} {
        allow read, write: if request.auth != null && (
          get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'lead' ||
          get(/databases/$(database)/documents/users/$(request.auth.uid)).data.assignedPharmacy == pharmacyId
        ) || true; // Allow unauthenticated access for regular/senior pharmacists
      }
    }
    
    // Allow authenticated users to read/write custom pages they own OR their pharmacy owner's custom pages
    // Also allow unauthenticated read/write access for regular/senior pharmacists
    match /customPages/{pageId} {
      allow read: if request.auth != null && (
        resource.data.ownerId == request.auth.uid ||
        get(/databases/$(database)/documents/pharmacies/$(get(/databases/$(database)/documents/users/$(request.auth.uid)).data.assignedPharmacy)).data.ownerId == resource.data.ownerId
      ) || true; // Allow unauthenticated read for regular/senior pharmacists
      allow write: if request.auth != null && request.resource.data.ownerId == request.auth.uid || true; // Allow unauthenticated write for regular/senior pharmacists
    }
    
    // Legacy global collections (for backward compatibility) - only for lead users
    match /monthlyStock/{document=**} {
      allow read, write: if request.auth != null && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'lead';
    }
    
    match /attendance/{document=**} {
      allow read, write: if request.auth != null && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'lead';
    }
    
    match /shortages/{document=**} {
      allow read, write: if request.auth != null && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'lead';
    }
  }
}